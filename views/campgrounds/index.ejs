<% include ../partials/header %>

<div class="container">
	<% if (currentUser && currentUser.isAdmin) { %>
		<h1>You'are an admin!</h1>
	<% } %>
	<header class="jumbotron">
		<div class="container">
			<h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
			<p>View our hand-picked campground from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
			</p>
			<p>
				<form action="/campgrounds" method="GET" class="form-inline">
					<div class="form-group">
						<input type="text" name="search" placeholder="Campground search..." class="form-control mr-2">
						<input type="submit" value="Search" class="btn btn-light btn-outline-primary"></input>
					</div>
				</form>
			</p>
		</div>
	</header>	
</div>
<div class="container">
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% if(noMatch !== null) { %>
			<div class="container mt-5">
				<h3><%= noMatch %></h3>
			</div>
		<% } %>
		<% campgrounds.forEach(function(campground){ %>
			<div id="imgindex" class="col-md-3 col-sm-6">
				<div class="card">
					<img class="card-img-top" src="<%= campground.image %>">
					<div class="card-body">
						<h4 class="card-title"><%= campground.name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>	
		<% }) %>
	</div>
</div>

<% include ../partials/footer %>