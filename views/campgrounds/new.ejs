<% include ../partials/header %>

	<h1 class="text-center">Create a New Campground</h1>
	<div div class="typingform">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<strong>Name</strong>
				<input class="form-control" type="text" placeholder="name" name="name" required>
			</div>
			<div class="form-group">
				<strong>Image Url</strong>
				<input class="form-control" type="text" placeholder="image url" name="image" required>
			</div>
			<div class="form-group">
				<strong>Cost</strong>
				<input class="form-control" type="number" placeholder="cost" name="price" min="0.01" step="0.01" required>
			</div>
			<div class="form-group">
				<strong>Location</strong>
				<input class="form-control" type="text" placeholder="location" name="location" required>
			</div>
			<div class="form-group">
				<strong>Description</strong>
				<input class="form-control" type="text" placeholder="description" name="description">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary  border btn-block">Submit!</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>

<% include ../partials/footer %>