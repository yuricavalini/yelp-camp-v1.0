<% include ../partials/header %>

	<h1 class="text-center">Add New Comment to <%= campground.name %></h1>
	<div class="typingform">
		<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" placeholder="text" name="comment[text]">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary  border btn-block">Submit!</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>

<% include ../partials/footer %>